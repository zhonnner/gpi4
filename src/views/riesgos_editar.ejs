<main> 
  <h3></h3>
  <!-- <div class="row">
    <div class="card-group mt-3"> -->
      <div class='col-md-3 mt-3 card ' id="tabla_de_proyecto">
        <form action="/riesgos_editar/save/<%= datos[0].ID_R%>" method="post" class="card-body">
          <h3 class='card-title'>Agregar Riesgos</h3>
        <div class="form-group">
            <input type="text" name="Nombre" class="form-control" required="text"  value="<%= datos[0].Nombre%>"> 
        </div>
        <%
        if(datos[0].Probabilidad == 1 ){
          proba = "Muy bajo";
          num_proba =1;
        }else if(datos[0].Probabilidad == 3 ){
          proba = "Bajo";
          num_proba =3;
        }else if(datos[0].Probabilidad == 5 ){
          proba = "Moderado";
          num_proba =5;
        }else if(datos[0].Probabilidad == 7 ){
          proba = "Alto";
          num_proba =7;
        }else if(datos[0].Probabilidad == 9 ){
          proba = "Muy alto";
          num_proba =9;
        }else{
          proba = "error";
          num_proba =1;
        }

        %>
        <div class="form-group">
            <select  name="Probabilidad" required class="form-control" > 
              <option value="<%=num_proba %>"selected hidden><%= proba%></option>
              <option value="1">Muy bajo</option>
              <option value="3">Bajo</option>
              <option value="5">Moderado</option>
              <option value="7">Alto</option>
              <option value="9">Muy alto</option>
            </select>
        </div>
        <%
        if(datos[0].Impacto == 1 ){
          impacto = "Muy bajo";
          num_impacto =1;
        }else if(datos[0].Impacto == 3 ){
          impacto = "Bajo";
          num_impacto =3;
        }else if(datos[0].Impacto == 5 ){
          impacto = "Moderado";
          num_impacto =5;
        }else if(datos[0].Impacto == 7 ){
          impacto = "Alto";
          num_impacto =7;
        }else if(datos[0].Impacto == 9 ){
          impacto = "Muy alto";
          num_impacto =9;
        }else{
          impacto = "error";
          num_impacto =1;
        }

        %>
        <div class="form-group">
            <select name="Impacto" required class="form-control" > 
              <option value="<%=num_impacto %>"selected hidden><%= impacto %></option>
              <option value="1">Muy bajo</option>
              <option value="3">Bajo</option>
              <option value="5">Moderado</option>
              <option value="7">Alto</option>
              <option value="9">Muy alto</option>
            </select>
        </div>
        <div class="form-group">
            <input type="text" name="Tipo" class="form-control"  required="text" value="<%= datos[0].Tipo %>"> 
        </div>
        <div class="form-group col-">
            <input type="text" rows="2" cols="30" name="Descripcion" class="form-control" required="text" value="<%= datos[0].Descripcion %> "> </textarea>
        </div>
        <div class="card-body row" style="padding: auto;">
          <h5 class="col-md-12"> Comentarios </h5>
          <div class="col-md-12" >
              <label class="form-label">Ingrese comentarios de edicion (no obligatorio)</label>
              <input type="text" placeholder="comentarios...." name="Comentario" class="form-control">
          </div> 
        </div>
        <input type="hidden"  name="ID_P" value=''>
        <div class="form-group">
          <input type="hidden" name="Opinion" value="">
        </div>
        <input type="submit" class="btn btn-primary" value="Guardar">
        <a class="btn btn-primary" href="/riesgos_agregar/<%= datos[0].ID_P %>">Agregar nuevo riesgo</a>
        </form>
      </div>

</main>

</body>
